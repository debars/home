background yes
use_xft yes
xftfont 123:size=8
xftalpha 0.1
update_interval 0.5
total_run_times 0
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 250 5
maximum_width 400
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color gray
default_shade_color red
default_outline_color green
alignment top_right
gap_x 10
gap_y 10
no_buffers no
uppercase no
cpu_avg_samples 2
net_avg_samples 1
override_utf8_locale yes
use_spacer right
text_buffer_size 256

TEXT

${font Arial:bold:size=10}${color Tan1}SYSTEM ${color DarkSlateGray} ${hr 2}
$font${color DimGray}$sysname $kernel $alignr $machine
Uptime $alignr${uptime}
File System $alignr${fs_type}
${execi 3600 lsb_release -d|cut -f2}
${font Arial:bold:size=10}${color Tan1}PROCESSORS ${color DarkSlateGray}${hr 2}
$font${color DimGray}${freq_g 1}GHz - CPU1  ${cpu cpu1}% ${cpubar cpu1}
${font Arial:bold:size=10}${color Tan1}MEMORY ${color DarkSlateGray}${hr 2}
$font${color DimGray}MEM $alignc $mem / $memmax $alignr $memperc%
$membar
${font Arial:bold:size=10}${color Tan1}HDD ${color DarkSlateGray}${hr 2}
$font${color DimGray}/home $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_free_perc /home}%
${fs_bar 3 /home}
${font Arial:bold:size=10}${color Tan1}USBHDD ${color DarkSlateGray}${hr 2}
$font${color DimGray}usbhdd $alignc ${fs_used /media/f69d3b4f-a9c7-4e9e-880a-b2b84bbed70d} / ${fs_size /media/f69d3b4f-a9c7-4e9e-880a-b2b84bbed70d} $alignr ${fs_free_perc /media/f69d3b4f-a9c7-4e9e-880a-b2b84bbed70d}%
${fs_bar 3 /media/f69d3b4f-a9c7-4e9e-880a-b2b84bbed70d}
${font Arial:bold:size=10}${color Tan1}TOP PROCESSES ${color DarkSlateGray}${hr 2}
${color DimGray}$font${top_mem name 2}${alignr}${top mem 2} %
$font${top_mem name 3}${alignr}${top mem 3} %
$font${top_mem name 4}${alignr}${top mem 4} %
$font${top_mem name 5}${alignr}${top mem 5} %
${font Arial:bold:size=10}${color Tan2}NETWORK${color DarkSlateGray}${hr 2}
${font Arial:bold:size=8}${color Tan2}$alignr wlan0
${if_up wlan0}$font${color DimGray}IP:$alignr ${addr wlan0} $endif
$font${color DimGray}ESSID $alignr ${wireless_essid wlan0}
$font${color DimGray}AP $alignr ${wireless_ap wlan0}
$font${color DimGray}Link $alignr ${wireless_link_qual wlan0}%
$font${color DimGray}Down $alignr ${downspeed wlan0}
$font${color DimGray}Up $alignr ${upspeed wlan0}
$font${color DimGray}Downloaded: $alignr  ${totaldown wlan0}
$font${color DimGray}Uploaded: $alignr  ${totalup wlan0}
$font${color DimGray}External IP$alignr${execi 3600 ~/.config/conkyrc/getextip}
${font Arial:bold:size=10}${color Tan2}WEATHER${color DarkSlateGray}${hr 2}
${font}${color DimGray}${execi 1800 ~/.config/conkyrc/weather.sh 80538}
${font Arial:bold:size=10}${color Tan2}TIMEZONES ${color DarkSlateGray}${hr 2}
${font}${color DimGray}New York:$alignr${tztime America/New_York %H:%M %a %b %d}
 Denver:$alignr${tztime America/Denver %H:%M %a %b %d}
${font Arial:bold:size=10}${color Tan2}CALENDAR ${color DarkSlateGray}${hr 2}${font DejaVu Sans Mono :size=8}${color DimGray}${exec gcal --starting-day=sunday | cut -c23-44 --complement}
